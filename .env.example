# SlowGuardian v9 Environment Configuration
# Copy this file to .env and configure your settings

# Server Configuration
PORT=8080
NODE_ENV=production
LOG_LEVEL=info

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
# Alternative: mongodb://username:password@host:port/database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Spotify API Configuration
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:8080/api/spotify/callback

# Security Configuration
KEYAUTH_NAME=SlowGuardian
KEYAUTH_OWNER_ID=your_owner_id
KEYAUTH_SECRET=your_secret_key

# Google AdSense Configuration
# Get these values from your Google AdSense dashboard
GOOGLE_ADSENSE_PUBLISHER_ID=ca-pub-XXXXXXXXXXXXXXXX

# Ad Slot IDs (create these in your AdSense dashboard)
ADSENSE_SLOT_HEADER=1234567890
ADSENSE_SLOT_SIDEBAR=2345678901
ADSENSE_SLOT_FOOTER=3456789012
ADSENSE_SLOT_CONTENT=4567890123
ADSENSE_SLOT_MOBILE=5678901234
ADSENSE_SLOT_VIDEO=6789012345

# Database Configuration (legacy - now using MongoDB)
DATABASE_URL=postgresql://username:password@localhost:5432/slowguardian

# Analytics Configuration
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# Development Settings
DEBUG_MODE=false
ENABLE_CONSOLE_LOGS=false