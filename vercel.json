{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["static/**", "src/**", "plugins/**", "config.js"],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ],
  "functions": {
    "index.js": {
      "runtime": "nodejs20.x",
      "memory": 512
    }
  },
  "installCommand": "npm ci"
}
